		<effect ect="ONECE" time="1" ett="STATUS" est="TO" tgt="ATK" value="0" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="TO" tgt="DEF" value="0" p="1" />
	</condition>

	<condition name="DEAD" desc="死亡" pri="201">
		<effect ect="CONTINUE" time="INFINITY" ett="STOP" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="TO" tgt="HP" value="0" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="TO" tgt="MP" value="0" p="1" />
