<KinugasaBattleConfig>


	<!-- コンディションマネージャの定義 -->
	
	
	

	<!-- 状態異常のマスタ定、魔法、スキル、装備による効果も同じストレージに追加することができる	-->

	<condition name="CASTING" desc="詠唱" pri="1">
		<effect ect="CONTINUE" time="INFINITY" ett="STOP" p="1" />
	</condition>
	
	<condition name="DEFENCE" desc="防御" pri="1" >
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="DEF" value="+0.33" p="1" />
	</condition>

	<condition name="AVOIDANCE" desc="回避" pri="1" >
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="AVO" value="0.33" p="1" />
	</condition>
	
	<condition name="ESCAPED" desc="逃走" pri="1" >
		<effect ect="CONTINUE" time="INFINITY" ett="STOP" p="1" />
	</condition>

	<condition name="REGENE" desc="リジェネ" pri="2" >
		<effect ect="CONTINUE" time="5/15" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="HP"  value="+0.1" p="1" />
	</condition>
	
	<condition name="MOIST" desc="湿潤" pri="5" >
		<effect ect="ONECE" time="1" ett="ATTRIBUTE_IN" est="ADD_VALUE" tgt="FLAME" value="-0.5" p="1" />
		<effect ect="ONECE" time="1" ett="ATTRIBUTE_IN" est="ADD_VALUE" tgt="THNDER" value="+0.5" p="1" />
	</condition>
	
	<condition name="POISON" desc="毒" pri="10">
		<effect ect="CONTINUE" time="50/75" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="HP"  value="-0.05"  p="1" />
		<effect ect="ONECE"    time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="CON" value="-0.5" p="1" />
	</condition>
	
	<condition name="FLAME" desc="炎上" pri="20">
		<effect ect="CONTINUE" time="50/75" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="HP"  value="-0.1" p="1" />
		<effect ect="CONTINUE" time="50/75" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="CON" value="-0.1" p="1" />
		<effect ect="CONTINUE" time="50/75" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="SAN" value="-0.025" p="1" />
		<effect ect="CONTINUE" time="50/75" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="POW" value="-0.025" p="1" />
		<effect ect="CONTINUE" time="50/75" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="ATK" value="-0.1" p="1" />
		<effect ect="CONTINUE" time="50/75" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="DEF" value="-0.1" p="1" />
		<effect ect="CONTINUE" time="50/75" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="AVO" value="-0.1" p="1" />
	</condition>


	<condition name="SPELLING" desc="昏睡" pri="20">
		<effect ect="CONTINUE" time="5/15" ett="STOP"                                                   p="0.1" />
		<effect ect="ONECE"    time="1"	    ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="SPD" value="-0.5" p="0.90" />
		<effect ect="ONECE"    time="1"	    ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="AVO" value="-0.5" p="0.90" />
	</condition>
	
	<condition name="FROZEN" desc="凍結" pri="20">
		<effect ect="CONTINUE" time="25/50" ett="STOP"                                                   p="0.75" />
		<effect ect="ONECE"    time="1"	    ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="SPD" value="-0.5" p="0.75" />
		<effect ect="ONECE"    time="1"	    ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="AVO" value="-0.5" p="0.75" />
	</condition>
	
	<condition name="TREE" desc="木化" pri="20">
		<effect ect="CONTINUE" time="25/50" ett="STOP"                                                    p="0.99" />
		<effect ect="CONTINUE" time="25/50" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="SAN" value="-0.05" p="1" />
		<effect ect="ONECE"    time="1"	    ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="SPD" value="-0.75" p="0.8" />
		<effect ect="ONECE"    time="1"	    ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="AVO" value="-0.75" p="0.8" />
		<effect ect="ONECE"    time="1"	    ett="ATTRIBUTE_IN" est="ADD_PERCENT_OF_MAX" tgt="FLAME" value="-0.75" p="1" />
		<effect ect="ONECE"    time="1"	    ett="ATTRIBUTE_IN" est="ADD_PERCENT_OF_MAX" tgt="C_FLAME" value="-0.75" p="1" />
	</condition>
	
	<condition name="SEAL" desc="封印" pri="40">
		<effect ect="CONTINUE" time="25/25" ett="STOP" p="0.8" />
	</condition>
	
	
	<condition name="PARALYS" desc="麻痺" pri="60">
		<effect ect="CONTINUE" time="10/50" ett="STOP" p="0.25" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="DEX" value="-0.75" p="0.5" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="SPD" value="-0.75" p="0.5" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="AVO" value="-0.75" p="0.5" />
	</condition>
	
	<condition name="SWOON" desc="気絶" pri="60">
		<effect ect="CONTINUE" time="10/20" ett="STOP" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="DEX" value="-0.75" p="0.5" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="SPD" value="-0.75" p="0.5" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="AVO" value="-0.75" p="0.5" />
	</condition>
	
	<condition name="CONFUSION" desc="混乱" pri="71">
		<effect ect="CONTINUE" time="5/25" ett="CONFU" p="1"/>
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="POW" value="-0.25" p="0.5" />
	</condition>
	
	<condition name="MADNESS" desc="狂乱" pri="72">
		<effect ect="CONTINUE" time="5/25" ett="CONFU" p="1"/>
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="POW" value="-0.25" p="0.5" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="SAN" value="-0.25" p="0.5" />
		<effect ect="CONTINUE" ett="ADD_CONDITION" tgt="TRUE_MADNESS" p="0.05" />
	</condition>
	
	<condition name="TRUE_MADNESS" desc="発狂" pri="73">
		<effect ect="CONTINUE" time="INFINITY" ett="CONFU" p="1"/>
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="POW" value="-0.50" p="0.75" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="SAN" value="-0.50" p="0.75" />
	</condition>
	
	<condition name="GOLDY" desc="黄金化" pri="91">
		<effect ect="CONTINUE" time="INFINITY" ett="STOP" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_VALUE" tgt="SIZ" value="999" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_VALUE" tgt="DEF" value="999" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_VALUE" tgt="SPD" value="-99" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_VALUE" tgt="AVO" value="-99" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_VALUE" tgt="DEX" value="-99" p="1" />
		<effect ect="ONECE" time="1" ett="ATTRIBUTE_IN" est="ADD_VALUE" tgt="CHOP" value="-0.75" p="1" />
		<effect ect="ONECE" time="1" ett="ATTRIBUTE_IN" est="ADD_VALUE" tgt="STAB" value="-0.75" p="1" />
		<effect ect="ONECE" time="1" ett="ATTRIBUTE_IN" est="ADD_VALUE" tgt="IMPACT" value="-0.75" p="1" />
	</condition>
	
	<condition name="CUT" desc="切断" pri="100">
		<effect ect="CONTINUE" time="INFINITY" ett="STOP" p="0.25" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="SIZ" value="-0.25" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="DEF" value="-0.25" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="SPD" value="-0.25" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="AVO" value="-0.25" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="DEX" value="-0.25" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="APP" value="-0.25" p="1" />
		<effect ect="CONTINUE" time="INFINITY" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="SAN" value="-0.25" p="1" />
		<effect ect="CONTINUE" time="INFINITY" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="POW" value="-0.25" p="1" />
		<effect ect="CONTINUE" time="INFINITY" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="CON" value="-0.25" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="ATK" value="-0.25" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="DEF" value="-0.25" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="ADD_PERCENT_OF_MAX" tgt="AVO" value="-0.25" p="1" />
		<effect ect="CONTINUE" ett="ADD_CONDITION" tgt="MADNESS" p="0.1" />
	</condition>


	<condition name="DESTROY" desc="消滅" pri="200">
		<effect ect="CONTINUE" time="INFINITY" ett="STOP" p="1" />
		<effect ect="ONECE" time="1" ett="STATUS" est="TO" tgt="HP" value="0" p="1" />
